@model Ejercicio03.Models.Concierto

@{
    ViewData["Title"] = "Create";
}

<h3 class="titulo">Crear nuevo registro</h3>
<hr />
<div class="contenedor contenedor-nuevoRegistro">
    <div class="contenedor-formulario">
        <form class="formulario" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="divValidation"></div>
            <div class="form-group">
                <label asp-for="GirasId" class="control-label"></label>
                <select asp-for="GirasId" class ="form-control" asp-items="ViewBag.GirasId"></select>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="Fecha" class="label"></label>
                <input asp-for="Fecha" class="input" />
                <span asp-validation-for="Fecha" class="span"></span>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="CiudadesId" class="label"></label>
                <select asp-for="CiudadesId" class="input" asp-items="ViewBag.CiudadesId"></select>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="Direccion" class="label"></label>
                <input asp-for="Direccion" class="input" />
                <span asp-validation-for="Direccion" class="span"></span>
            </div>
            <div class="contenedor-submit">
                <input type="submit" value="Create" class="submit" />
            </div>
        </form>
    </div>
</div>

<div class="contenedor-campoFormulario back">
    <a class="back-link" asp-action="Index">Volver a la tabla -></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
