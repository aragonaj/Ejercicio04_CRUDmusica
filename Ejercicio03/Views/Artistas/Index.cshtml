    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-sm" id="datatableCheating">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Nombre"]">@Html.DisplayNameFor(model => model.Nombre)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeNacimiento)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["FechaDeNacimiento"]">@Html.DisplayNameFor(model => model.FechaDeNacimiento)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudades)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Ciudades"]">@Html.DisplayNameFor(model => model.Ciudades)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Generos)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Generos"]">@Html.DisplayNameFor(model => model.Generos)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupos)
