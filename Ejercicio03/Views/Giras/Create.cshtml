@model Ejercicio03.Models.Gira

@{
    ViewData["Title"] = "Create";
}

<h3 class="titulo">Crear nuevo registro</h3>
<hr />
<div class="contenedor contenedor-nuevoRegistro">
    <div class="contenedor-formulario">
        <form class="formulario" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="textoValidacion"></div>
            <div class="contenedor-campoFormulario">
                <label asp-for="Nombre" class="label"></label>
                <input asp-for="Nombre" class="input" />
                <span asp-validation-for="Nombre" class="textoValidacion"></span>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="GruposId" class="label"></label>
                <select asp-for="GruposId" class ="input" asp-items="ViewBag.GruposId"></select>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="FechaInicio" class="label"></label>
                <input asp-for="FechaInicio" class="input" />
                <span asp-validation-for="FechaInicio" class="textoValidacion"></span>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="FechaFin" class="label"></label>
                <input asp-for="FechaFin" class="input" />
                <span asp-validation-for="FechaFin" class="textoValidacion"></span>
            </div>
            <div class="contenedor-submit">
                <input type="submit" value="Create" class="submit" />
            </div>
        </form>
    </div>
</div>

<div class="contenedor-campoFormulario back">
    <a class="back-link" asp-action="Index">Volver a la tabla -></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
