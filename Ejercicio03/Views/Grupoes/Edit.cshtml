@model Ejercicio03.Models.Grupo

@{
    ViewData["Title"] = "Edit";
}

<h3 class="titulo">Editar registro</h3>
<hr />
<div class="contenedor contenedor-nuevoRegistro">
    <div class="contenedor-formulario">
        <form class="formulario" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="textoValidacion"></div>
            <input type="hidden" asp-for="Id" />
            <div class="contenedor-campoFormulario">
                <label asp-for="Nombre" class="label"></label>
                <input asp-for="Nombre" class="input" />
                <span asp-validation-for="Nombre" class="textoValidacion"></span>
            </div>
            <div class="contenedor-campoFormulario form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Grupo1" /> @Html.DisplayNameFor(model => model.Grupo1)
                </label>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="FechaCreacion" class="label"></label>
                <input asp-for="FechaCreacion" class="input"/>
                <span asp-validation-for="FechaCreacion" class="textoValidacion"></span>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="CiudadesId" class="label"></label>
                <select asp-for="CiudadesId" class="input" asp-items="ViewBag.CiudadesId"></select>
                <span asp-validation-for="CiudadesId" class="textoValidacion"></span>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="RepresentantesId" class="label"></label>
                <select asp-for="RepresentantesId" class="input" asp-items="ViewBag.RepresentantesId"></select>
                <span asp-validation-for="RepresentantesId" class="textoValidacion"></span>
            </div>
            <div class="contenedor-campoFormulario">
                <label asp-for="GenerosId" class="label"></label>
                <select asp-for="GenerosId" class="input" asp-items="ViewBag.GenerosId"></select>
                <span asp-validation-for="GenerosId" class="textoValidacion"></span>
            </div>
            <div class="contenedor-submit">
                <input type="submit" value="Guardar registro" class="submit" />
            </div>
        </form>
    </div>
</div>

<div class="contenedor-campoFormulario back">
    <a class="back-link" asp-action="Index">Volver a la tabla -></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
