@model IEnumerable<Ejercicio03.Models.Grupo>

@{
    ViewData["Title"] = "Index";
}


<h3 class="titulo">Grupos</h3>

<p class="creacion">
    <a class="creacion-link" asp-action="Create">Crear registro</a>
</p>
<table class="tabla" id="datatableCheating">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Nombre"]">@Html.DisplayNameFor(model => model.Nombre)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo1)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Grupo1"]">@Html.DisplayNameFor(model => model.Grupo1)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["FechaCreacion"]">@Html.DisplayNameFor(model => model.FechaCreacion)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudades)
                @* <a asp-action="Index"
                asp-route-sortOrder="@ViewData["Ciudades"]">@Html.DisplayNameFor(model => model.Ciudades)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Generos)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Generos"]">@Html.DisplayNameFor(model => model.Generos)</a> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Representantes)
                @* <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["Representantes"]">@Html.DisplayNameFor(model => model.Representantes)</a> *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="tbody">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grupo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudades.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Generos.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Representantes.NombreCompleto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
